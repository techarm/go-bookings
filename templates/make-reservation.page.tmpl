{{ template "base" . }}
{{ define "content" }}
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">予約</h1>
                <form action="/make-reservation" method="post" class="needs-validation" novalidate>
                    <div>
                        <label for="name" class="form-label">氏名</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div>
                        <label for="email" class="form-label">メールアドレス</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div>
                        <label for="phone-number" class="form-label">電話番号</label>
                        <input type="text" class="form-control" id="phone-number" required>
                    </div>
                    <div>
                        <label for="date" class="form-label">予約日</label>
                        <input type="date" class="form-control" id="date" required>
                    </div>
                    <div class="row mt-3">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-primary px-5">検索</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{ end }}