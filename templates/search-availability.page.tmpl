{{ template "base" }}
{{ define "content" }}
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 offset-md-3">
                <h1 class="mb-3">現在予約の空き状況確認</h1>
                <form action="/reservation" method="GET" class="needs-validation" novalidate>
                    <div class="row mb-3" id="reservation-date">
                        <div class="col">
