                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="end-date" name="end" placeholder="終了日" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-primary px-5" id="search">検索</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{ end }}
