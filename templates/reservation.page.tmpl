{{ template "base" }}
{{ define "content" }}
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 offset-md-3">
                <h1 class="mb-3">現在予約の空き状況確認</h1>
                <form action="/make-reservation" method="GET">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="start-date" class="form-label">開始日</label>
                            <input type="date" class="form-control" id="start-date" aria-describedby="start-date">
                            <div id="start-date-help" class="form-text">予約開始日付を入力してください</div>
                        </div>
                        <div class="col">
                            <label for="end-date" class="form-label">終了日</label>
                            <input type="date" class="form-control" id="end-date" aria-describedby="end-date">
                            <div id="end-date-help" class="form-text">予約終了日付を入力してください</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-primary px-5">検索</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{ end }}